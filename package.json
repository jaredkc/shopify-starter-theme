{
  "name": "shopify-starter-theme",
  "version": "1.0.0",
  "description": "Using TailwindCSS in your Shopify theme",
  "scripts": {
    "test": "shopify theme check",
    "dev": "npm-run-all --parallel shop:dev tw:dev",
    "shop:dev": "shopify theme dev --store=bb-staged.myshopify.com",
    "tw:dev": "npx @tailwindcss/cli -i ./assets/tailwind.css -o ./assets/tailwind.min.css -w",
    "tw:build": "npx @tailwindcss/cli -i ./assets/tailwind.css -o ./assets/tailwind.min.css -m && npx @tailwindcss/cli -i ./assets/tailwind.css -o ./assets/tailwind.build.css"
  },
  "author": "Jared Cornwall (https://github.com/jaredkc)",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.0"
  }
}
