<div class="subnav__card" {{ block.shopify_attributes }}>
  {% if block.settings.image %}
    {{ block.settings.image | image_url: width: 100 | image_tag }}
  {% endif %}
  <a href="{{ block.settings.link }}" class="subnav__card-link">
    {{- block.settings.title -}}
  </a>
</div>

{% schema %}
{
  "name": "Subnav card",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:settings.image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:settings.label",
      "default": "t:text_defaults.featured_collection"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:settings.link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Subnav card"
    }
  ]
}
{% endschema %}
