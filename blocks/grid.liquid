{% doc %}
  Renders a grid layout container for nested blocks.

  Allows configuring the number of columns on mobile (1-4) and desktop (1-8),
  with customizable gap and padding options.

  @example
  {% content_for 'block', type: 'grid', id: 'product-grid' %}
{% enddoc %}

<div
  class="block-grid {% if block.settings.inherit_color_scheme == false %}color-{{ block.settings.color_scheme }}{% endif %} spacing-style"
  style="
    --grid-columns-mobile: {{ block.settings.columns_mobile }};
    --grid-columns-desktop: {{ block.settings.columns_desktop }};
    --grid-gap: {{ block.settings.gap }}px;
    {% render 'spacing-style', settings: block.settings %}
  "
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>

{% stylesheet %}
  .block-grid {
    display: grid;
    grid-template-columns: repeat(var(--grid-columns-mobile, 2), minmax(0, 1fr));
    gap: var(--grid-gap, 16px);
  }

  @media (min-width: 768px) {
    .block-grid {
      grid-template-columns: repeat(var(--grid-columns-desktop, 2), minmax(0, 1fr));
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.grid",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "t:content.layout"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "t:settings.columns_desktop",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "label": "t:settings.columns_mobile",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "gap",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "t:settings.gap",
      "default": 16
    },
    {
      "type": "header",
      "content": "t:content.appearance"
    },
    {
      "type": "checkbox",
      "id": "inherit_color_scheme",
      "label": "t:settings.inherit_color_scheme",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1",
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 104,
      "step": 8,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 104,
      "step": 8,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left",
      "min": 0,
      "max": 104,
      "step": 8,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right",
      "min": 0,
      "max": 104,
      "step": 8,
      "unit": "px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:names.grid"
    }
  ]
}
{% endschema %}

