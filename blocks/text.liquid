<div class="rte {{ block.settings.font_size }} content-{{ block.settings.max_width }}" {{ block.shopify_attributes }}>
  {{ block.settings.text }}
</div>

{% schema %}
{
  "name": "t:names.text",
  "tag": null,
  "settings": [
    {
      "type": "richtext",
      "id": "text",
      "label": "t:settings.text",
      "default": "<p>Insert your catchphrase here (or something else).</p>"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "t:settings.font_size",
      "options": [
        {
          "value": "text-sm",
          "label": "t:options.sm"
        },
        {
          "value": "text-base",
          "label": "t:options.md"
        },
        {
          "value": "text-lg",
          "label": "t:options.lg"
        },
        {
          "value": "text-xl",
          "label": "t:options.xl"
        }
      ],
      "default": "text-lg"
    },
    {
      "type": "select",
      "id": "max_width",
      "label": "t:settings.max_width",
      "options": [
        {
          "value": "xs",
          "label": "t:options.xs"
        },
        {
          "value": "sm",
          "label": "t:options.sm"
        },
        {
          "value": "md",
          "label": "t:options.md"
        },
        {
          "value": "lg",
          "label": "t:options.lg"
        },
        {
          "value": "full",
          "label": "t:options.full"
        }
      ],
      "default": "md"
    }
  ],
  "presets": [
    {
      "name": "t:names.text"
    }
  ]
}
{% endschema %}
