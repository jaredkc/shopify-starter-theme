<div class="subnav__featured-item" {{ block.shopify_attributes }}>
  <a class="subnav__featured-item-link" href="{{ block.settings.link }}">
    {% if block.settings.image %}
      {{ block.settings.image | image_url: width: 100 | image_tag }}
    {% endif %}
    {{- block.settings.label -}}
  </a>
</div>

{% schema %}
{
  "name": "Nav featured item",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:settings.image"
    },
    {
      "type": "text",
      "id": "label",
      "label": "t:settings.label",
      "default": "Featured item"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:settings.link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Nav featured item"
    }
  ]
}
{% endschema %}
