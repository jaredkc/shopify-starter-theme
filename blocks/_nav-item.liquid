<li class="header__menu-item">
  <a href="{{ block.settings.link }}" class="header__menu-link">
    {{- block.settings.label -}}
  </a>
</li>

{% schema %}
{
  "name": "Nav item",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "t:settings.label",
      "default": "Products"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:settings.link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Nav item"
    }
  ]
}
{% endschema %}
