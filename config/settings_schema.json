    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 20,
        "default": 1440,
        "unit": "px",
        "label": "t:settings_schema.layout.settings.page_width.label"
      }
    ]
  },
  {
    "name": "t:names.cart",
    "settings": [
      {
        "type": "link_list",
        "id": "cart_menu",
        "label": "t:settings.cart_menu",
        "info": "t:settings.cart_menu_info"
      }
    ]
  },
  {
    "name": "t:names.colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "t:settings.background",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "text",
            "label": "t:settings.text",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button",
            "label": "t:settings.button_background",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "t:settings.label",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "t:settings.secondary_button_label",
            "default": "#121212"
          }
        ],
        "role": {
          "text": "text",
          "background": "background",
          "links": "secondary_button_label",
          "icons": "text",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "background",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "secondary_button_label"
        }
      }
    ]
  }
